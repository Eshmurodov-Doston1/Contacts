<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="same_level"
    app:dragEdge="right">
        <androidx.cardview.widget.CardView
            android:id="@+id/cons1"
            android:layout_width="140dp"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/tel_card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="5dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_width="55dp"
                app:layout_constraintRight_toLeftOf="@id/sms_card"
                android:layout_height="70dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="#F8CA2A"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/phone"
                        android:src="@drawable/ic_call_1"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/sms_card"
               app:layout_constraintLeft_toRightOf="@id/tel_card"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="5dp"
                android:layout_width="55dp"
                android:layout_height="70dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="#DD2371"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/sms"
                        android:src="@drawable/ic_group__1_"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="15dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guide1"
            app:layout_constraintGuide_percent="0.02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guide2"
            app:layout_constraintGuide_percent="0.98"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/guide1"
            app:layout_constraintRight_toLeftOf="@id/guide2"
            android:foreground="?attr/actionBarItemBackground"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/tel_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    android:src="@drawable/ic_frame__2_"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/name_person"
                    android:padding="3dp"
                    app:layout_constraintTop_toTopOf="@id/tel_image"
                    app:layout_constraintLeft_toRightOf="@id/tel_image"
                    app:layout_constraintBottom_toTopOf="@id/number_person"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="left|center"/>
                <TextView
                    android:padding="3dp"
                    android:id="@+id/number_person"
                    app:layout_constraintTop_toBottomOf="@id/name_person"
                    app:layout_constraintLeft_toLeftOf="@id/name_person"
                    app:layout_constraintBottom_toBottomOf="@id/tel_image"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:text="+998994206278"
                    android:layout_height="27dp"/>
                <ImageView
                    android:id="@+id/menu"
                    app:layout_constraintTop_toTopOf="@id/name_person"
                    app:layout_constraintBottom_toBottomOf="@id/number_person"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/name_person"
                    app:layout_constraintHorizontal_bias="0.9"
                    android:src="@drawable/ic_frame__1_"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</com.chauthai.swipereveallayout.SwipeRevealLayout>